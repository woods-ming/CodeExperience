                            {
                                "key": "分配资源",
                                "description": "给每项任务，分配必需的资源"
                            },
                            {
                                "key": "安排人手",
                                "description": "给每项任务，分配可胜任的人"
                            },
                            {
                                "key": "估计时间",
                                "description": "给每项任务，分配投入的的时间"
                            },
                            {
                                "key": "估计花费",
                                "description": "给每项任务，分配预算金额（很重要，是后续量化的基础）"
                            }
                        ]
                    },
                    {
                        "section_name": "6.建立工作网络图",
                        "blocks": [
                            {
                                "key": "依赖关系",
                                "description": "梳理任务的先后顺序"
                            },
                            {
                                "key": "并行任务",
                                "description": "找到可以同时工作的任务"
                            },
                            {
                                "key": "关键路径",
                                "description": "找到最长的路径"
                            },
                            {
                                "key": "余地",
                                "description": "与关键路径相比，多余的工期"
                            }
                        ]
                    },
                    {
                        "section_name": "7.制作项目进度表",
                        "blocks": [
                            {
                                "key": "里程碑",
                                "description": "对于关键任务，设定完成标志"
                            },
                            {
                                "key": "平整资源",
                                "description": "用时间抵消不足的资源（余地用完，就延时）"
                            },
                            {
                                "key": "甘特图",
                                "description": "描述任务的先后顺序和持续时间（画出时间表）"
                            }
                        ]
                    },
                    {
                        "section_name": "8.估计：就是建立在某种基础上的猜",
                        "blocks": [
                            {
                                "key": "一致估计法",
                                "description": "让多个有经验的人分别估计，找到差异的原因，综合后得到结果"
                            },
                            {
                                "key": "日历表估计",
                                "description": "工作时间!=完成时间（工作者也许有优先级更高的事情）"
                            }
                        ]
                    },
                    {
                        "section_name": "9.避免常犯的错误",
                        "blocks": [
                            {
                                "key": "看法片面",
                                "description": "让干活的人参与意见（广开言路）"
                            },
                            {
                                "key": "跳过计划",
                                "description": "瞄准好了再开火，不要慌乱（沉着应对）"
                            },
                            {
                                "key": "粒度太粗",
                                "description": "将任务继续分解，到有把握的粒度为止（深入分析）"
                            },
                            {
                                "key": "粒度太细",
                                "description": "砍掉过细的细节，回溯到有把握的粒度为止（点到即止）"
                            },
                            {
                                "key": "忽略风险",
                                "description": "考虑可能的异常，做好预案（以管理的态度对待风险）"
                            },
                            {
                                "key": "任务拖延",
                                "description": "工作人员的负荷不超过85%（留有余地），减少“启动时间”（专注）"
